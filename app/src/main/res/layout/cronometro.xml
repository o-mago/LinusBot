<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/linus_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/linus_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"/>

    <LinearLayout
        android:id="@+id/textos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@id/linus_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/texto_base"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Faltam"
            android:textSize="25sp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/titleText" />

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:cardBackgroundColor="@color/colorAccent"
            app:cardCornerRadius="10dp">
            <TextView
                android:id="@+id/dias_faltando"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 DIAS"
                android:textSize="30sp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textStyle="bold"
                android:textColor="#FFFFFF" />

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/para_o_que_falta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Para o início das inscrições"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textColor="@color/titleText" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <android.support.v7.widget.CardView
        android:id="@+id/inscricao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentBottom="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INSCREVA-SE"
            android:textSize="30sp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF" />
    </android.support.v7.widget.CardView>

</RelativeLayout>